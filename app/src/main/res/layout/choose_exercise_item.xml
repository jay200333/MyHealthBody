<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/checkbox_exercise" android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
    <ImageView android:layout_width="40dp" android:layout_height="40dp"
        android:layout_marginLeft="5dp" android:id="@+id/exercise_img"
        android:layout_toRightOf="@+id/checkbox_exercise" android:layout_centerVertical="true" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/exercise_name" android:layout_marginLeft="5dp"
        android:layout_centerVertical="true" android:layout_toEndOf="@id/exercise_img" />
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:clickable="true" android:id="@+id/info_exercise_img" android:layout_marginEnd="5dp"
        android:background="@color/black" android:src="@drawable/ic_info_exercise"
        android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
</RelativeLayout>