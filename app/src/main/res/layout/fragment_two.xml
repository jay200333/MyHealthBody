<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp">
    <CalendarView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/calendar" />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="날짜를 선택해 주세요." android:id="@+id/setdate_txt" />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="운동 기록" android:layout_marginTop="15dp" />
    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/fragment_two_recyclerview"
        android:visibility="gone" />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="운동 계획하기" android:id="@+id/exercise_choice_btn"
        android:layout_marginTop="15dp" />
</LinearLayout>